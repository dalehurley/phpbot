{
  "name": "dalehurley/phpbot",
  "description": "PHP Bot for automating your life - An evolving AI assistant powered by Claude",
  "type": "project",
  "require": {
    "php": "^8.2",
    "ext-readline": "*",
    "cboden/ratchet": "^0.4.4",
    "claude-php/agent": "^1.5",
    "claude-php/claude-php-sdk": "^0.5.3",
    "dragonmantank/cron-expression": "^3.6",
    "phpoffice/phpword": "^1.0",
    "react/datagram": "^1.2"
  },
  "license": "MIT",
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Dalehurley\\Phpbot\\": "src/"
    }
  },
  "bin": [
    "bin/phpbot"
  ],
  "authors": [
    {
      "name": "Dale Hurley",
      "email": "dale.hurley@createmy.com.au"
    }
  ],
  "scripts": {
    "phpbot": "php bin/phpbot",
    "web": "bin/run-web.sh"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0
  }
}
